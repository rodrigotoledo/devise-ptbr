<div class="md:grid md:grid-cols-1 md:gap-4 lg:grid-cols-2">
  <div class="md:col-span-2">
    <h2 class="text-lg font-semibold text-gray-700">Esqueceu sua senha?</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "md:col-span-2" }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, "E-mail", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full py-2 px-3 rounded-lg border border-gray-400" %>
    </div>

    <div class="text-center truncate">
      <%= f.submit "Enviar instruções de redefinição de senha", class: "w-full md:w-auto py-2 px-4 bg-sky-900 text-white rounded-full hover:bg-sky-800 focus:outline-none focus:ring-2 focus:ring-sky-400 focus:ring-opacity-75" %>
    </div>
  <% end %>
</div>
