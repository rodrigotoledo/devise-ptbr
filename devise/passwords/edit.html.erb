<div class="md:grid md:grid-cols-1 md:gap-4 lg:grid-cols-2">
  <div class="md:col-span-2">
    <h2 class="text-lg font-semibold text-gray-700">Alterar sua senha</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "md:col-span-2" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-4">
      <%= f.label :password, "Nova senha", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres mÃ­nimo)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full py-2 px-3 rounded-lg border border-gray-400" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirmar nova senha", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full py-2 px-3 rounded-lg border border-gray-400" %>
    </div>

    <div class="text-center truncate">
      <%= f.submit "Alterar minha senha", class: "w-full md:w-auto py-2 px-4 bg-sky-900 text-white rounded-full hover:bg-sky-800 focus:outline-none focus:ring-2 focus:ring-sky-400 focus:ring-opacity-75" %>
    </div>
  <% end %>
</div>
