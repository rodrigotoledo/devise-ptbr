<div class="md:grid md:grid-cols-1 md:gap-4 lg:grid-cols-2">
  <div class="md:col-span-2">
    <h2 class="text-lg font-semibold text-gray-700">Entrar</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "md:col-span-2" }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, 'E-mail', class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full py-2 px-3 rounded-lg border border-gray-400" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, 'Senha', class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full py-2 px-3 rounded-lg border border-gray-400" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <label class="inline-flex items-center">
          <%= f.check_box :remember_me,  class: "form-checkbox text-gray-700" %>
          <span class="ml-2 text-gray-700"> <%= f.label :remember_me, 'Lembrar acesso', class: "text-sm" %></span>
        </label>
      </div>
    <% end %>

    <div class="text-center">
      <%= f.submit "Entrar", class: "py-2 px-4 bg-sky-900 text-white rounded-full hover:bg-sky-800 focus:outline-none focus:ring-2 focus:ring-sky-400 focus:ring-opacity-75" %>
    </div>
  <% end %>
</div>
