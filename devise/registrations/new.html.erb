<div class="md:grid md:grid-cols-2 md:gap-8">
  <div class="md:w-1/2 mx-auto">
    <h2 class="text-lg font-semibold text-gray-700 mb-4">Criar conta</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mb-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full py-2 px-3 rounded-lg border border-gray-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, 'Senha', class: "block text-gray-700 text-sm font-bold mb-2" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> mínimo de caracteres)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full py-2 px-3 rounded-lg border border-gray-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, 'Confirmação de senha', class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full py-2 px-3 rounded-lg border border-gray-400" %>
      </div>

      <div class="text-center">
        <%= f.submit "Registrar", class: "py-2 px-4 bg-sky-900 text-white rounded-full hover:bg-sky-800 focus:outline-none focus:ring-2 focus:ring-sky-400 focus:ring-opacity-75" %>
      </div>
    <% end %>
  </div>
</div>
